<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
	<!-- Data Sources -->
	<data-sources></data-sources>

	<!-- Form Beans -->
	<form-beans>
		<form-bean name="TOP001" type="com.depthfirst.framework.struts.BaseForm" />
	</form-beans>


	<!-- Global Exceptions -->
	<global-exceptions></global-exceptions>


	<!-- Global Forwards -->
	<global-forwards>
	</global-forwards>

	<!-- Action Mappings -->
	<action-mappings>
		<action type="com.depthfirst.project.web.top.strust.CustomerAction"
				className="com.depthfirst.framework.struts.BaseDomainActionMapping"
				path="/top/customer" name="TOP001" scope="session" validate="false" parameter="cmd">
			<set-property property="serviceName" value="BaseDomainService" />
			<set-property property="baseDomainClassName" value="com.depthfirst.project.web.top.domian.Customer" />
			<set-property property="searchConditionClassName" value="com.depthfirst.project.web.top.strust.CostomerCondition" />
<!-- 			<set-property property="defaultOrderBy" value="o.module.order,o.pageType.order,o.order,o.code" /> -->
			<forward name="form" path="/top/customerForm.jsp" />
			<forward name="list" path="/top/customerList.jsp" />
		</action>
	</action-mappings>

	<!-- Message Resources -->
</struts-config>
