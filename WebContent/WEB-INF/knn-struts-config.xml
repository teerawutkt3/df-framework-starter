<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
	<!-- Data Sources -->
	<data-sources></data-sources>

	<!-- Form Beans -->
	<form-beans>
		<form-bean name="KNN001" type="com.depthfirst.project.web.kanoon.struts.KanoonCustomerForm" />
		
	</form-beans>


	<!-- Global Exceptions -->
	<global-exceptions></global-exceptions>


	<!-- Global Forwards -->
	<global-forwards>
	</global-forwards>

	<!-- Action Mappings -->
	<action-mappings>
		<action type="com.depthfirst.project.web.kanoon.struts.KanoonCustomerAction"
				className="com.depthfirst.framework.struts.BaseDomainActionMapping"
				path="/knn/Customer" name="KNN001" scope="session" validate="false" parameter="cmd">
			<set-property property="serviceName" value="BaseDomainService" />
			<set-property property="baseDomainClassName" value="com.depthfirst.project.web.kanoon.domain.KanoonCustomer" />
			<set-property property="searchConditionClassName" value="com.depthfirst.project.web.kanoon.domain.KanoonCustomerCondition" />
			<set-property property="defaultOrderBy" value="o.id" />
			<forward name="form" path="/knn/CustomerForm.jsp" />
			<forward name="list" path="/knn/CustomerList.jsp" />
		</action>
		
	</action-mappings>

	<!-- Message Resources -->
</struts-config>
